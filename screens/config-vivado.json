      "enabled": false,
      "type": "textbox",
      "depends": {
        "script_path": "$MICROPANEL_HOME/scripts/pi-cpu-temp.sh",
        "refresh_sec": "1.0",
        "display_title": "CPU-Temp"
      }
    },
    {
      "id": "transfer_logs",
      "title": "Transfer Logs",
      "enabled": false,
      "type": "textbox",
      "depends": {

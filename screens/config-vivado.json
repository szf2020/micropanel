      ]
    },
    {
      "id": "update_fpga",
      "title": "Update FPGA",
      "enabled": false,
      "type": "GenericList",
      "list_items": [
        {
          "title": "14-6-fhd",
          "action": "stdbuf -oL -eL $MICROPANEL_HOME/vivado-tool/vivado-fpga-flash-wrapper.sh --operation=flash --file=14-6-fhd --vivado=/home/pi/Xilinx/2025.1/Vivado_Lab --board=xc7s50-is25lp128f --verbose",
          "async": true,
          "timeout": 150,
          "log_file": "/tmp/fpga-flash.log",
          "progress_title": "Updating 14-6-fhd FPGA.."
        },
        {
          "title": "14-6-fhd-bkup",
          "action": "stdbuf -oL -eL $MICROPANEL_HOME/vivado-tool/vivado-fpga-flash-wrapper.sh --operation=dump --file=14-6-fhd --vivado=/home/pi/Xilinx/2025.1/Vivado_Lab --board=xc7s50-is25lp128f --verbose",
          "async": true,
          "timeout": 350,
          "log_file": "/tmp/fpga-flash.log",
          "progress_title": "Backing up 14-6-fhd FPGA.."
        },
        {
          "title": "14-6-fhd-rvrt",
          "action": "stdbuf -oL -eL $MICROPANEL_HOME/vivado-tool/vivado-fpga-flash-wrapper.sh --operation=revert --file=14-6-fhd --vivado=/home/pi/Xilinx/2025.1/Vivado_Lab --board=xc7s50-is25lp128f --verbose",
          "async": true,
          "timeout": 150,
          "log_file": "/tmp/fpga-flash.log",
          "progress_title": "Reverting 14-6-fhd FPGA.."
        },
        {
          "title": "Back"
        }
      ]
    },
    {
      "id": "power_settings",
      "title": "Power Settings",
      "enabled": false,
      "type": "GenericList",
      "list_items": [
        {"title": "Reboot", "action": "/usr/sbin/reboot"},
        {"title": "Poweroff", "action": "/usr/sbin/poweroff"},
        {"title": "Back"}
      ]
    },
    {
      "id": "hdmi_out",
      "title": "HDMI Timing",
      "enabled": false,
      "type": "GenericList",
      "list_items": [
        {"title": "Back"},
        {"title": "edid", "action": "$MICROPANEL_HOME/scripts/pi-config-txt.sh --configspath=$MICROPANEL_HOME/configs/ --input=/boot/firmware/config.txt --type=$1"},
        {"title": "12.3", "action": "$MICROPANEL_HOME/scripts/pi-config-txt.sh --configspath=$MICROPANEL_HOME/configs/ --input=/boot/firmware/config.txt --type=$1"},
        {"title": "14.6-fhd", "action": "$MICROPANEL_HOME/scripts/pi-config-txt.sh --configspath=$MICROPANEL_HOME/configs/ --input=/boot/firmware/config.txt --type=$1"},
        {"title": "14.6-2k5", "action": "$MICROPANEL_HOME/scripts/pi-config-txt.sh --configspath=$MICROPANEL_HOME/configs/ --input=/boot/firmware/config.txt --type=$1"},
        {"title": "15.6-2k5", "action": "$MICROPANEL_HOME/scripts/pi-config-txt.sh --configspath=$MICROPANEL_HOME/configs/ --input=/boot/firmware/config.txt --type=$1"},
        {"title": "27", "action": "$MICROPANEL_HOME/scripts/pi-config-txt.sh --configspath=$MICROPANEL_HOME/configs/ --input=/boot/firmware/config.txt --type=$1"}
      ],
      "list_selection": "$MICROPANEL_HOME/scripts/pi-config-txt.sh --configspath=$MICROPANEL_HOME/configs/ --input=/boot/firmware/config.txt"
    },
    {
      "id": "netinfo",
      "title": "Network Info",
      "enabled": false
    },
    {
      "id": "net_stats",
      "title": "Network Stats",
      "enabled": false,
      "type": "GenericList",
      "list_items": [
        {"title": "Back"}
      ],
      "items_source": "$MICROPANEL_HOME/scripts/network-interfaces-list.sh",
      "items_action": "launch_module:textbox"
    },
    {
      "id": "dynamic_network_stats",
      "title": "Network Stats",
      "enabled": false,
      "type": "textbox",
      "depends": {
        "script_path": "$MICROPANEL_HOME/scripts/network-data-info.sh --interface=$INTERFACE",
        "refresh_sec": "2.0",
        "display_title": "$INTERFACE Stats"
      }
    },
    {
      "id": "ping",
      "title": "Ping Tool",
      "enabled": false
    },
    {
      "id": "internet",
      "title": "Internet Test",
      "enabled": false
    },
    {
      "id": "speedtest",
      "title": "Speed Test",
      "enabled": false,
      "depends": {
        "download_url": "https://cachefly.cachefly.net/50mb.test"
      }
    },
    {
      "id": "throughputserver",
      "title": "IPerf3 Server",
      "enabled": false,
      "depends": {
        "iperf3_path": "/usr/bin/iperf3",
        "default_port": "5201"
      }
    },
    {
      "id": "throughputclient",
      "title": "IPerf3 Client",
      "enabled": false,
      "depends": {
        "iperf3_path": "/usr/bin/iperf3",
        "default_port": "5201",
        "default_duration": "10",
        "default_protocol": "tcp",
        "default_bandwidth": "0",
        "default_parallel": "1",
        "default_server_ip": "192.168.1.1"
      }
    },
    {
      "id": "netsettings",
      "title": "IP Settings",
      "enabled": false,
      "depends": {
        "action_script": "$MICROPANEL_HOME/scripts/dhcp-net-settings.sh",
        "os_type": "pios",
        "iface_name": "eth0"
      }
    },
    {
      "id": "wifi",
      "title": "WiFi Settings",
      "enabled": false,
      "depends": {
        "daemon_script": "/etc/init.d/networking"
      }
    },
    {
      "id": "brightness",
      "title": "Brightness",
      "enabled": false
    },
    {
      "id": "system",
      "title": "System Stats",
      "enabled": false
    },
    {

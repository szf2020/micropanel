    {
      "id": "update_fpga",
      "title": "Update FPGA",
      "enabled": false,
      "type": "GenericList",
      "list_items": [
        {
          "title": "12-3-inch",
          "action": "$MICROPANEL_HOME/fpga/bin/fpga-jtag-flasher.sh --flash=$MICROPANEL_HOME/fpga/bitbin/$1.bin",
          "async": true,
          "timeout": 350,
          "log_file": "/tmp/fpga-flash.log",
          "progress_title": "Updating 12.3-inch FPGA.."
        },
        {
          "title": "14.6-fhd",
          "action": "$MICROPANEL_HOME/fpga/bin/fpga-jtag-flasher.sh --flash=$MICROPANEL_HOME/fpga/bitbin/$1.bin",
          "async": true,
          "timeout": 350,
          "log_file": "/tmp/fpga-flash.log",
          "progress_title": "Updating 14.6-fhd FPGA.."
        },
        {
          "title": "14.6-fhd-half",
          "action": "$MICROPANEL_HOME/fpga/bin/fpga-jtag-flasher.sh --flash=$MICROPANEL_HOME/fpga/bitbin/$1.bin",
          "async": true,
          "timeout": 350,
          "log_file": "/tmp/fpga-flash.log",
          "progress_title": "Updating $1 FPGA.."
        },
        {
          "title": "14.6-fhd-full",
          "action": "$MICROPANEL_HOME/fpga/bin/fpga-jtag-flasher.sh --flash=$MICROPANEL_HOME/fpga/bitbin/$1.bin",
          "async": true,
          "timeout": 350,
          "log_file": "/tmp/fpga-flash.log",
          "progress_title": "Updating $1 FPGA.."
        },
        {
          "title": "15.6-2k5",
          "action": "sudo $MICROPANEL_HOME/fpga/bin/fpga-jtag-flasher-lattice.sh --flash=$MICROPANEL_HOME/fpga/bitbin/$1.bit",
          "async": true,
          "timeout": 70,
          "log_file": "/tmp/fpga-flash.log",
          "progress_title": "Updating $1 FPGA.."
        },
        {
          "title": "27-inch",
          "action": "sudo $MICROPANEL_HOME/fpga/bin/fpga-jtag-flasher-lattice.sh --flash=$MICROPANEL_HOME/fpga/bitbin/$1.bit",
          "async": true,
          "timeout": 70,
          "log_file": "/tmp/fpga-flash.log",
          "progress_title": "Updating $1 FPGA..."
        },
        {
          "title": "Back"
        }
      ]
    },
    {
      "id": "mcu_flash_menu",
      "type": "GenericList",
      "title": "IOC-Update",
      "enabled": false,
      "list_items": [
        {
          "title": "983HH",
          "action": "cd $MICROPANEL_HOME/flashrh850 && ./flashrh850.sh --script=bios-ver-09-autorun-delay.txt --bios=$1_Board_ROMBIOS.bin",
          "async": true,
          "timeout": 120,
          "log_file": "/tmp/rh850-flash.log",
          "progress_title": "Flashing MCU $1...",
          "parse_progress": true
        },
        {
          "title": "983HH-BlinkFst",
          "action": "cd $MICROPANEL_HOME/flashrh850 && ./flashrh850.sh --script=fast-blink.txt --bios=983HH_Board_ROMBIOS.bin",
          "async": true,
          "timeout": 120,
          "log_file": "/tmp/rh850-flash.log",
          "progress_title": "Flashing MCU $1...",
          "parse_progress": true
        },
        {
          "title": "983HH-BlinkSlo",
          "action": "cd $MICROPANEL_HOME/flashrh850 && ./flashrh850.sh --script=slow-blink.txt --bios=983HH_Board_ROMBIOS.bin",
          "async": true,
          "timeout": 120,
          "log_file": "/tmp/rh850-flash.log",
          "progress_title": "Flashing MCU $1...",
          "parse_progress": true
        },
        {
          "title": "EJ14-6",
          "action": "cd $MICROPANEL_HOME/flashrh850 && ./flashrh850.sh --script=bios-ver-09-autorun-delay.txt --bios=$1_Board_ROMBIOS.bin",
          "async": true,
          "timeout": 120,
          "log_file": "/tmp/rh850-flash.log",
          "progress_title": "Flashing IOC $1...",
          "parse_progress": true
        },
        {
          "title": "Back"
        }
      ]
    },
    {
      "id": "test_patches",
      "title": "Test Patches",
      "enabled": false,
      "type": "GenericList",
      "list_items": [
        {"title": "off", "action": "$MICROPANEL_HOME/scripts/patch-generator --off"},
        {"title": "red", "action": "$MICROPANEL_HOME/scripts/patch-generator --daemon red"},
        {"title": "green", "action": "$MICROPANEL_HOME/scripts/patch-generator --daemon green"},
        {"title": "blue", "action": "$MICROPANEL_HOME/scripts/patch-generator --daemon blue"},
        {"title": "cyan", "action": "$MICROPANEL_HOME/scripts/patch-generator --daemon cyan"},
        {"title": "magenta", "action": "$MICROPANEL_HOME/scripts/patch-generator --daemon magenta"},
        {"title": "yellow", "action": "$MICROPANEL_HOME/scripts/patch-generator --daemon yellow"},
        {"title": "white", "action": "$MICROPANEL_HOME/scripts/patch-generator --daemon white"},
        {"title": "Back"}
      ],
      "list_selection": "$MICROPANEL_HOME/scripts/patch-generator --read"
    },
    {
      "id": "video_player",
      "title": "Videos",
      "enabled": false,
      "type": "GenericList",
      "items_source": "$MICROPANEL_HOME/scripts/list-videos.sh",
      "items_path": "$MICROPANEL_HOME/media/videos",
      "items_action": "$MICROPANEL_HOME/scripts/play-video.sh $1 $MICROPANEL_HOME/media/videos",
      "list_selection": "$MICROPANEL_HOME/scripts/list-videos.sh",
      "list_items": [
        {"title": "Stop-Playback", "action": "$MICROPANEL_HOME/scripts/stop-video.sh"},
        {"title": "Back"}
      ]
    },
    {
      "id": "image_player",
      "title": "Images",
      "enabled": false,
      "type": "GenericList",
      "items_source": "$MICROPANEL_HOME/scripts/list-images.sh",
      "items_path": "$MICROPANEL_HOME/media/images",
      "items_action": "$MICROPANEL_HOME/scripts/play-image.sh $1 $MICROPANEL_HOME/media/images",
      "list_selection": "$MICROPANEL_HOME/scripts/list-images.sh",
      "list_items": [
        {"title": "Stop-Playback", "action": "$MICROPANEL_HOME/scripts/stop-image.sh"},
        {"title": "Back"}
      ]
    },
    {
      "id": "power_settings",
      "title": "Power Settings",
      "enabled": false,
      "type": "GenericList",
      "list_items": [
        {"title": "Reboot", "action": "/usr/sbin/reboot"},
        {"title": "Poweroff", "action": "/usr/sbin/poweroff"},
        {"title": "Back"}
      ]
    },
    {
      "id": "hdmi_out",
      "title": "HDMI Timing",
      "enabled": false,
      "type": "GenericList",
      "list_items": [
        {"title": "edid", "action": "$MICROPANEL_HOME/scripts/pi-config-txt.sh --configspath=$MICROPANEL_HOME/configs/ --input=/boot/firmware/config.txt --type=$1"},
        {"title": "12.3", "action": "$MICROPANEL_HOME/scripts/pi-config-txt.sh --configspath=$MICROPANEL_HOME/configs/ --input=/boot/firmware/config.txt --type=$1"},
        {"title": "14.6-fhd", "action": "$MICROPANEL_HOME/scripts/pi-config-txt.sh --configspath=$MICROPANEL_HOME/configs/ --input=/boot/firmware/config.txt --type=$1"},
        {"title": "14.6-2k5", "action": "$MICROPANEL_HOME/scripts/pi-config-txt.sh --configspath=$MICROPANEL_HOME/configs/ --input=/boot/firmware/config.txt --type=$1"},
        {"title": "15.6-2k5", "action": "$MICROPANEL_HOME/scripts/pi-config-txt.sh --configspath=$MICROPANEL_HOME/configs/ --input=/boot/firmware/config.txt --type=$1"},
        {"title": "27", "action": "$MICROPANEL_HOME/scripts/pi-config-txt.sh --configspath=$MICROPANEL_HOME/configs/ --input=/boot/firmware/config.txt --type=$1"},
        {"title": "Back"}
      ],
      "list_selection": "$MICROPANEL_HOME/scripts/pi-config-txt.sh --configspath=$MICROPANEL_HOME/configs/ --input=/boot/firmware/config.txt"
    },
    {
      "id": "netinfo",
      "title": "Network Info",
      "enabled": false
    },
    {
      "id": "net_stats",
      "title": "Network Stats",
      "enabled": false,
      "type": "GenericList",
      "list_items": [
        {"title": "Back"}
      ],
      "items_source": "$MICROPANEL_HOME/scripts/network-interfaces-list.sh",
      "items_action": "launch_module:textbox"
    },
    {
      "id": "dynamic_network_stats",
      "title": "Network Stats",
      "enabled": false,
      "type": "textbox",
      "depends": {
        "script_path": "$MICROPANEL_HOME/scripts/network-data-info.sh --interface=$INTERFACE",
        "refresh_sec": "2.0",
        "display_title": "$INTERFACE Stats"
      }
    },
    {
      "id": "ping",
      "title": "Ping Tool",
      "enabled": false
    },
    {
      "id": "internet",
      "title": "Internet Test",
      "enabled": false
    },
    {
      "id": "speedtest",
      "title": "Speed Test",
      "enabled": false,
      "depends": {
        "download_url": "https://cachefly.cachefly.net/50mb.test"
      }
    },
    {
      "id": "throughputserver",
      "title": "IPerf3 Server",
      "enabled": false,
      "depends": {
        "iperf3_path": "/usr/bin/iperf3",
        "default_port": "5201"
      }
    },
    {
      "id": "throughputclient",
      "title": "IPerf3 Client",
      "enabled": false,
      "depends": {
        "iperf3_path": "/usr/bin/iperf3",
        "default_port": "5201",
        "default_duration": "10",
        "default_protocol": "tcp",
        "default_bandwidth": "0",
        "default_parallel": "1",
        "default_server_ip": "192.168.1.1"
      }
    },
    {
      "id": "netsettings",
      "title": "IP Settings",
      "enabled": false,
      "depends": {
        "action_script": "$MICROPANEL_HOME/scripts/dhcp-net-settings.sh",
        "os_type": "pios",
        "iface_name": "eth0"
      }
    },
    {
      "id": "wifi",
      "title": "WiFi Settings",
      "enabled": false,
      "depends": {
        "daemon_script": "/etc/init.d/networking"
      }
    },
    {
      "id": "brightness",
      "title": "Brightness",
      "enabled": false
    },
    {
      "id": "system",
      "title": "System Stats",
      "enabled": false
    },
    {
      "id": "version_info",
      "title": "Version",
      "enabled": false,
      "type": "textbox",
      "depends": {
        "script_path": "$MICROPANEL_HOME/scripts/micropanel-version.sh",
        "display_title": "Version"
      }
    },
    {
      "id": "cpu_temp",
      "title": "CPU-Temp",
      "enabled": false,
      "type": "textbox",
      "depends": {
        "script_path": "$MICROPANEL_HOME/scripts/pi-cpu-temp.sh",
        "refresh_sec": "1.0",
        "display_title": "CPU-Temp"
      }
    },
    {
      "id": "transfer_logs",
      "title": "Transfer Logs",
      "enabled": false,
      "type": "textbox",
      "depends": {
        "script_path": "$MICROPANEL_HOME/scripts/collect-logs-to-usb.sh",
        "display_title": "Transfer Logs"
      }
    },
    {
      "id": "invert_display",
      "title": "Invert Display",
      "enabled": false,
      "type": "action",
      "action": "invert_display"
    }
  ],
  "persistent_data": {
    "file_path": "$MICROPANEL_HOME/settings.json"
  }
